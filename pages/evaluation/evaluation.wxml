<!--pages/evaluation/evaluation.wxml-->
<view id="evaluation" class="contain">
  <view class="df">
    <image src="../../assets/test/1.jpg" class="e-img"/>    
    <view>
      <text class="t-bold h50">描述相符：</text>
      <view class="df">
        <text class="star {{checked == item?'active':''}}" wx:for="{{stars}}" 
        wx:key="{{index}}" catchtap="changeStar" data-i="{{item}}">{{item}}星
        </text>
      </view>      
    </view>
  </view>
  <view class="line"></view>
  <textarea placeholder="分享你的购买心得"/>
  <view class="df-sb">
    <view ></view>
    <view class="e-btn">提交评论</view>
  </view>
  
</view>
