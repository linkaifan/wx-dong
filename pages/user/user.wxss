/* pages/user/user.wxss */
#user{
  font-size: 12px;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}
/* 注册 */
.img-box{
  text-align: center;
  padding: 50rpx;
}
.reg-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: inline-block;
  margin-bottom: 20rpx; 
}
.inp-box{
  height: 80rpx;
  line-height: 80rpx;
}
.inp-box>input{
  flex-grow: 1;
}
.reg-btn{
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  background-color: #0297fe;
  border-radius: 5px;
  margin: 50rpx;
  text-align: center;
}
.t-code{
  width: 180rpx;
  text-align: center;
}
/* 登陆 */
.log-form,.for-form{
  padding: 40rpx 100rpx;
  font-size: 14px;
}
.test-img{
  width: 100vw;
  height: 400rpx;
}
.log-btn1{
  margin-top: 60rpx;
  margin-bottom: 30rpx;
  text-align: center;
  background-color: #0297fe;
  border-radius: 45rpx;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
}
.log-btn2{
  border: 1px solid #0297fe;
  height: 90rpx;
  line-height: 90rpx;
  color: #0297fe;
  border-radius: 45rpx;
  text-align: center;
  margin-bottom: 150rpx;
  box-sizing: border-box;
}
.forget-t{
  margin-top: 10rpx;
  text-align: right;
}