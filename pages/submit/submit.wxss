/* pages/submit/submit.wxss */
#submit{
  min-height: 100vh;
  background-color: #f0eff5;
  font-size: 13px;
}
.head{
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.info{
  padding-top: 20rpx; 
  padding-bottom: 20rpx; 
  background-color: #fff;
  margin-bottom: 20rpx;
}
.set-icon{
  width: 30rpx;
  height: 30rpx;
}
.box{
  background-color: #fff;
  padding-bottom: 30rpx;
  padding-top: 10rpx;
  margin-bottom: 20rpx;
}
.box-mid{
  background-color: #f5f5f5;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.box-info{
  flex-grow: 1;
}
.box-img{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.box-foot{
  padding: 10rpx;
  padding-bottom: 0;
  text-align: right;
}
.box-btn{
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #fe0000;
  color: #fe0000;
  display: inline-block;
  text-align: center;
  border-radius: 3px;
}
.bar{
  color: #fe0000;
  height: 90rpx;
  line-height: 90rpx;
  position: fixed;
  bottom: 0;
  width: 100vw;
  padding-left: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.submit-btn{
  color: #fff;
  background-color: #fe0000;
  width: 250rpx;
  text-align: center;
}